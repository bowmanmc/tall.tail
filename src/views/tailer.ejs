<!DOCTYPE html>
<html lang="en">
  
  <head>
    <meta charset="utf-8">

    <title>tail/f/<%= file.id %></title>

    <link href="/tail/bootstrap/css/bootstrap-responsive.css" 
        rel="stylesheet">
    <link href="/tail/bootstrap/css/bootstrap.css" 
        rel="stylesheet" />
    <link href="/tail/styles/main.css"
        rel="stylesheet" />

    <style>
    </style>
  </head>
  
  <body>

<!-- Navbar -->
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="brand" href="/tail">TallTail</a>
      <ul class="nav">
        <li class="dropdown">
          <a href="#" 
              class="dropdown-toggle"
              data-toggle="dropdown">
              Available Files
              <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
              <% files.forEach(function(file, i, arr){ %>
                <li><a href="/tail/f/<%= file %>"><%= file %></a></li>
              <% }) %>
          </ul>
        </li>
        <li><a><%= file.path %></a></li>
      </ul>
    </div>
  </div><!-- navbar-inner -->
</div><!-- navbar -->
    

<div id="tail"><div class="spacer">&nbsp;</div></div>

<div id="status">Lines: <span id="linecount">0</span></div>

    <script src="/tail/jquery/jquery-1.8.1.min.js"></script>
    <script src="/tail/bootstrap/js/bootstrap.js"></script>
    <script src="/tail/socket.io/socket.io.js"></script>
    <script src="/tail/javascript/tail.js"></script>

    <script>
        var tailer = new Tailer();
        tailer.tail('<%= file.id %>');
    </script>
  </body>

</html>

